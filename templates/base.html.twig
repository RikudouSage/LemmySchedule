<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ "Lemmy Schedule Post" | trans }}{% endblock %} | Lemmy Schedule</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_link_tags('app') }}

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}{% endblock %}
</head>
<body class="hold-transition" {{ stimulus_controller('page') }} {{ stimulus_action('page', 'hideMenuOnMobile', 'click') }}>
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item" {{ stimulus_target('page', 'sideMenuToggler') }}>
                <a class="nav-link" {{ stimulus_action('page', 'toggleSideMenu') }} href="#" role="button"><i
                            class="fas fa-bars"></i></a>
            </li>
            {% if app.user %}
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="{{ path('app.post.list') }}" class="nav-link">{{ "Home" | trans }}</a>
                </li>
            {% endif %}
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4" {{ stimulus_target('page', 'sideMenu') }}>
        <!-- Brand Logo -->
        <a href="{{ path('app.post.list') }}" class="brand-link">
            <span class="brand-text font-weight-light">{{ "Lemmy Schedule Post" | trans }}</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="javascript:void(0)" class="d-block">
                        {% if app.user %}
                            {{ app.user.userIdentifier }}
                        {% else %}
                            {{ "anonymous" | trans }}
                        {% endif %}
                    </a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                    data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->
                    {% if app.user %}
                        <li class="nav-item">
                            <a href="{{ path('app.post.create') }}" class="nav-link">
                                <i class="nav-icon fas fa-map-signs"></i>
                                <p>
                                    {{ "Schedule a post" | trans }}
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app.post.pin') }}" class="nav-link">
                                <i class="nav-icon fas fa-map-pin"></i>
                                <p>
                                    {{ "Schedule post pin/unpin" | trans }}
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('auth.logout') }}" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>
                                    {{ "Logout" | trans }}
                                </p>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>{{ block('title') }}</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        {% for message in app.flashes('error') %}
                            {% include "notification/error.html.twig" with {
                                message: message
                            } only %}
                        {% endfor %}
                        {% for message in app.flashes('success') %}
                            {% include "notification/success.html.twig" with {
                                message: message
                            } only %}
                        {% endfor %}
                    </div>
                    {% block body %}{% endblock %}
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            Design: <strong><a href="https://adminlte.io" target="_blank">AdminLTE.io (3.2.0)</a></strong>
        </div>
        <strong>
            Created by <a href="https://lemmings.world/u/rikudou">@rikudou@lemmings.world</a>.
            <a href="https://github.com/RikudouSage/LemmySchedule">See source code on GitHub!</a>
        </strong>
    </footer>
</div>
<!-- ./wrapper -->
</body>
</html>
